{
  "compilerOptions": {
    "target": "ES2022",                                  
    "lib": ["ES2023"],                                        
    "module": "Node16",                                
    "paths": {
      "@/*": ["./src/*"]
    },                                     
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                      
    "skipLibCheck": true,
    "isolatedModules": true                                
  }
}
